{
  "extends": "stylelint-config-standard",
  "customSyntax": "postcss-less",
  "rules": {
    "max-nesting-depth": 2,
    "selector-max-compound-selectors": 2,
    "selector-max-specificity": "0,3,2",
    "selector-class-pattern": ".*",
    "value-keyword-case": ["lower", { "ignoreFunctions": ["extend"] }]
  }
}
