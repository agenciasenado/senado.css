doctype html
html(lang='pt')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no')
        title Senado Federal
        link(href='../dist/main.css', rel='stylesheet')
    body
        //include navglobal
        //include portaltopo

        template.js-template-row
            .row(style='position:relative; min-height: 50px').Painel.Painel--cut
                .Toolbar
                    .pull-right
                        a.Toolbar-tool.js-addcol: span.glyphicon.glyphicon-plus
                    a.Toolbar-tool.js-remove(data-type='row'): span.glyphicon.glyphicon-remove
                    span.Toolbar-title Toolbar


        template.js-template-col
            .u-spacer--lg
            .col.col-xs-12(style='position:relative; min-height: 50px').Painel.Painel--light
                .Toolbar
                    .pull-right
                        a.Toolbar-tool.dropdown-toggle(data-toggle='dropdown')
                            span.glyphicon.glyphicon-th-large
                        ul.dropdown-menu
                            li: a.js-split(href='#', data-value='1') Dividir
                            li: a.js-change-width(href='#', data-value='1') 1
                            li: a.js-change-width(href='#', data-value='2') 2
                            li: a.js-change-width(href='#', data-value='3') 3
                            li: a.js-change-width(href='#', data-value='4') 4
                            li: a.js-change-width(href='#', data-value='5') 5
                            li: a.js-change-width(href='#', data-value='6') 6
                            li: a.js-change-width(href='#', data-value='7') 7
                            li: a.js-change-width(href='#', data-value='8') 8
                            li: a.js-change-width(href='#', data-value='9') 9
                            li: a.js-change-width(href='#', data-value='10') 10
                            li: a.js-change-width(href='#', data-value='11') 11
                            li: a.js-change-width(href='#', data-value='12') 12
                    a.Toolbar-tool.js-remove(data-type='col'): span.glyphicon.glyphicon-remove
                    span.Toolbar-title Toolbar


        .u-spacer--lg

        .container.u-spacer
            .col-xs-12
                a.btn.btn-default.js-add-row Adicionar linha

        .container.js-container

        .u-spacer--lg

        //include footer
        script(src='../node_modules/jquery/dist/jquery.min.js')
        script(src='../node_modules/bootstrap/dist/js/bootstrap.min.js')
        //script(src='//localhost:35729/livereload.js')
        script(src='grid.js')
