    style.
        .container {
        }
        .outer {
            display: table;
            width: 100%;
            height: 500px;
            border: 1px dashed green;
        }
        .t-row {
            display: table-row;
            background: mediumpurple;
            width: 100%;
            /*max-height: 0;*/
            overflow: hidden;
            transition: max-height 400ms linear;
        }
        input {
            display: none;
        }
        input[type="radio"]:checked + label {
            background: #ccc;
            max-height: 1000px;
            overflow: hidden;
        }
        input[type="radio"]:checked + label > p {
            border: 1px solid #f06;
            height: 100%;
        }
        input[type="radio"]:not(:checked) + label {
            /*background: red;*/
            height: 20px;
        }
        p {
            background: gold;
            display: table;
            width: 100%;
        }
    body

