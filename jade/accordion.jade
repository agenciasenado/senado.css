        .container {
        }

        .outer {
            display: table;
            table-layout:fixed;
            width: 100%;
            height: 400px;
            border: 1px dashed green;
        }

        .t-row {
            display: table-row;
            border-collapse: collapse;
            width: 100%;
            overflow: hidden;
            height: 1px;
            transition: all 300ms ease-in-out;
        }

        input {
            display: none;
        }

        input[type="radio"]:checked + .t-row + .t-row {
            overflow: hidden;
            height: 100%;
        }

        input[type="radio"]:not(:checked) + .t-row + .t-row {
            display: none;
            height: 1px;
            max-height: 1px;
            overflow: hidden;
        }

        .p {
            max-width: 100%;
        }

        .iamd {
            height: auto;
        }

        .Box {
            overflow: hidden;
        }
